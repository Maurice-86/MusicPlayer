<UserControl x:Class="MusicPlayer.Dialogs.SettingsDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:MusicPlayer.Dialogs"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <StackPanel>
            <TextBlock Margin="0,0,0,2"
                       FontSize="20"
                       FontWeight="Bold"
                       Text="主题" />
            <StackPanel Orientation="Horizontal">
                <Label VerticalAlignment="Center" Content="{Binding ThemeContent}" />
                <ToggleButton IsChecked="{Binding IsDarkTheme}" />
            </StackPanel>
        </StackPanel>
        <StackPanel Grid.Row="1">
            <TextBlock Margin="0,0,0,2"
                       FontSize="20"
                       FontWeight="Bold"
                       Text="语言" />
            <StackPanel Orientation="Horizontal">
                <Label VerticalAlignment="Center" Content="{Binding LanguageContent}" />
                <ComboBox SelectedIndex="{Binding LanguageModeIndex}">
                    <ComboBoxItem>中文</ComboBoxItem>
                    <ComboBoxItem>英文</ComboBoxItem>
                </ComboBox>
            </StackPanel>
        </StackPanel>
        <StackPanel Grid.Row="2" HorizontalAlignment="Right" Orientation="Horizontal">
            <Button Margin="0,0,10,0"
                    Click="CloseDialog_Click"
                    Foreground="{DynamicResource WhiteForeground}"
                    Content="取消" />
            <Button Click="CloseDialog_Click"
                    Command="{Binding SaveCommand}"
                    Foreground="{DynamicResource WhiteForeground}"
                    Content="保存" />
        </StackPanel>
    </Grid>
</UserControl>
